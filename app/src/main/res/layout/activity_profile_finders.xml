        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="230dp">
            <ImageView
                android:scaleType="centerCrop"
                android:background="#F45F92"
                android:id="@+id/backgroudImageProcess"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btnBack"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/left_arrow"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />

            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImage"
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/love"
                    app:civ_border_color="#ffffff"
                    app:civ_border_width="2dp"
                    />
            </RelativeLayout>

        </RelativeLayout >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_gravity="start"
                android:id="@+id/txtNameUserCurrent"
                android:layout_width="wrap_content"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Sang Nguyen"
                android:textColor="#424242"
                android:textAlignment="textStart"
                android:textSize="30sp"
                android:textStyle="bold"
                />
            <Button
                android:id="@+id/btnGoChatScreen"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Go Message"></Button>
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#D8D8D8">
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:layout_marginRight="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/border_img_profile"
                android:drawableLeft="@drawable/username"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp">
                <TextView
                    android:id="@+id/profileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Son Heung Min "
                    android:textColor="#424242"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="@null"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Họ tên"
                    />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_img_profile"
                android:drawableLeft="@drawable/info"
                android:layout_marginLeft="10dp"/>
            <LinearLayout
