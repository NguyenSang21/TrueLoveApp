<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="3dp">

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_weight="0.15">
    </RelativeLayout>

    <com.example.truelove.utilchatuser.ChatMessageView
        android:id="@+id/chatMessageView"
        android:layout_weight="0.7"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        app:cmv_arrowGravity="start"
        app:cmv_arrowMargin="5dp"
        app:cmv_arrowPosition="right"
        app:cmv_backgroundColor="@color/green"
        app:cmv_backgroundColorPressed="#FFBABABA"
        app:cmv_contentPadding="10dp"
        app:cmv_cornerRadius="10dp"
        app:cmv_showArrow="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingRight="8dp">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="#aaffffff"
                android:contentDescription="@string/app_name"

                android:src="@drawable/close" />

            <TextView
                android:id="@+id/tv_message"
                android:layout_gravity="end"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hello"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="8dp"

                android:text="@string/app_name"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textSize="12sp" />
        </LinearLayout>
    </com.example.truelove.utilchatuser.ChatMessageView>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dialogAvatar"
        android:src="@drawable/userme"
        android:background="@color/white"
        android:layout_width="45dp"
        android:layout_height="45dp"
        tools:ignore="MissingClass" />
</LinearLayout>