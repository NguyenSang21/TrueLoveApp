            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/dialogAvatar"
            android:layout_toRightOf="@+id/dialogAvatar">
            <TextView
