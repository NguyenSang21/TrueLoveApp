                android:id="@+id/dialogMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:gravity="top"
                android:maxLines="1"/>

        </RelativeLayout>

        <FrameLayout
